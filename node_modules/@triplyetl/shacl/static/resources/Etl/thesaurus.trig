prefix owl: <http://www.w3.org/2002/07/owl#>
prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
prefix sdo: <https://schema.org/>
prefix sh: <http://www.w3.org/ns/shacl#>
prefix skos: <http://www.w3.org/2004/02/skos/core#>
prefix xsd: <http://www.w3.org/2001/XMLSchema#>

prefix graph: <https://collectiedata.hetnieuweinstituut.nl/graph/>
prefix shp: <https://collectiedata.hetnieuweinstituut.nl/model/shp/>

graph:model {

  skos:Concept rdfs:subClassOf rdfs:Resource.
  skos:ConceptScheme rdfs:subClassOf rdfs:Resource.



  shp:node_Concept
    a sh:NodeShape;
    sh:property shp:node_Concept_iriStrategy;
    sh:targetNode skos:Concept.
  shp:node_Concept_iriStrategy
    a sh:PropertyShape;
    sh:path [ sh:inversePath rdf:type ];
    sh:or (
      [ sh:pattern '^https://collectiedata.hetnieuweinstituut.nl/model/con/geothesau/\\S*' ]
      [ sh:pattern '^https://collectiedata.hetnieuweinstituut.nl/model/con/thesau/\\S*' ] ).
  shp:Concept
    a sh:NodeShape;
    sh:closed true;
    sh:ignoredProperties ( rdf:type );
    sh:property
      shp:Concept_altLabel,
      shp:Concept_broader,
      shp:Concept_exactMatch,
      shp:Concept_hiddenLabel,
      shp:Concept_inScheme,
      shp:Concept_narrower,
      shp:Concept_prefLabel,
      shp:Concept_related,
      shp:Resource_altLabel,
      shp:Resource_hiddenLabel,
      shp:Resource_prefLabel,
      shp:Resource_sameAs,
      shp:Resource_scopeNote,
      shp:Resource_seeAlso;
    sh:targetClass skos:Concept.

  shp:Concept_altLabel
    a sh:PropertyShape;
    sh:languageIn ( 'nl' );
    sh:path skos:altLabel.

  shp:Concept_broader
    a sh:PropertyShape;
    sh:and ( shp:iri );
    sh:maxCount 1;
    sh:path skos:broader.

  shp:Concept_exactMatch
    a sh:PropertyShape;
    sh:and ( shp:iri );
    sh:path skos:exactMatch.

  shp:Concept_hiddenLabel
    a sh:PropertyShape;
    sh:languageIn ( 'nl' );
    sh:path skos:hiddenLabel.

  shp:Concept_inScheme
    a sh:PropertyShape;
    sh:and ( shp:iri );
    sh:class skos:ConceptScheme;
    sh:path skos:inScheme.

  shp:Concept_narrower
    a sh:PropertyShape;
    sh:and ( shp:iri );
    sh:path skos:narrower.

  shp:Concept_prefLabel
    a sh:PropertyShape;
    sh:languageIn ( 'nl' );
    sh:path skos:prefLabel.

  shp:Concept_related
    a sh:PropertyShape;
    sh:and ( shp:iri );
    sh:path skos:related.



  shp:node_ConceptScheme
    a sh:NodeShape;
    sh:property shp:node_ConceptScheme_iriStrategy;
    sh:targetNode skos:ConceptScheme.
  shp:node_ConceptScheme_iriStrategy
    a sh:PropertyShape;
    sh:path [ sh:inversePath rdf:type ];
    sh:pattern '^https://collectiedata.hetnieuweinstituut.nl/model/scheme/\\S*'.
  shp:ConceptScheme
    a sh:NodeShape;
    sh:closed true;
    sh:ignoredProperties ( rdf:type );
    sh:property
      shp:ConceptScheme_prefLabel,
      shp:Resource_altLabel,
      shp:Resource_hiddenLabel,
      shp:Resource_prefLabel,
      shp:Resource_sameAs,
      shp:Resource_scopeNote,
      shp:Resource_seeAlso;
    sh:targetClass skos:ConceptScheme.

  shp:ConceptScheme_prefLabel
    a sh:PropertyShape;
    sh:languageIn ( 'nl' );
    sh:path skos:prefLabel.

}
