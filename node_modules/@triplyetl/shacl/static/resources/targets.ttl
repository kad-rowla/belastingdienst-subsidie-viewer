prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> # The RDF Concepts Vocabulary (RDF)
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> # The RDF Schema vocabulary (RDFS)
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sdo: <https://schema.org/> . # Schema.org
@prefix ex: <http://example.org/> .

ex:Person rdfs:subClassOf sdo:Person .
ex:John a sdo:Person ;
  sdo:givenName "John" ;
  sdo:familyName "Doe" .

ex:PersonShape1 sh:targetNode ex:John .

# https://w3c.github.io/data-shapes/shacl/#targetClass
ex:Jane a ex:Person .
ex:Charly a sdo:Person .
ex:PersonShape1 sh:targetClass sdo:Person; a sh:NodeShape .

# https://w3c.github.io/data-shapes/shacl/#implicit-targetClass
ex:Rick a ex:ImplicitTargetClass .
ex:ImplicitTargetClass a rdfs:Class, sh:NodeShape .

# https://w3c.github.io/data-shapes/shacl/#targetSubjectsOf
ex:Alice ex:knows ex:Bob .
ex:Bob ex:livesIn ex:NewYork .
ex:TargetSubjectsOfExampleShape
	sh:targetSubjectsOf ex:knows .

# https://w3c.github.io/data-shapes/shacl/#targetObjectsOf
ex:TargetObjectsOfExampleShape
	sh:targetObjectsOf ex:playsWith .

ex:Mick ex:playsWith ex:Keith .
ex:Keith ex:livesIn ex:London .
