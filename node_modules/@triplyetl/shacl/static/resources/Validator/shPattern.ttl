prefix ex: <https://example.org/>
@prefix sh: <http://www.w3.org/ns/shacl#> . # W3C Shapes Constraint Language (SHACL) Vocabulary

ex:PatternExampleShape
	a sh:NodeShape ;
	sh:targetNode ex:Bob, ex:Alice, ex:Carol ;
	sh:property ex:PatternExampleShape_pattern .

ex:PatternExampleShape_pattern 
  sh:path ex:bCode ;
  sh:pattern "^B" ;    # starts with 'B'
  sh:flags "i" ;       # Ignore case
.
ex:Bob ex:bCode "b101" .
ex:Alice ex:bCode "B102" .
ex:Carol ex:bCode "C103" .